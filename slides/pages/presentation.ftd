align-self: end
padding.px: 7
background.solid: $inherited.colors.background.step-1
border-radius.px: 8
opacity: 0.3

-- ftd.image:
if: { show-slide.order != 1 }
src: $assets.files.slides.assets.left.svg
width.fixed.px: 30
height.fixed.px: 30
align-self: end
padding.px: 7
background.solid: $inherited.colors.background.step-1
border-radius.px: 8
