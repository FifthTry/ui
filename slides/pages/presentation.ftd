-- ftd.image:
src: $assets.files.slides.assets.delete.svg
width.fixed.px: 30
height.fixed.px: 30
align-self: end
padding.px: 7
background.solid: $inherited.colors.background.step-1
border-radius.px: 8
$on-click$: $show-slide.delete-slide.submit(team=$show-slide.team-slug, presentation=$show-slide.presentation-slug, order=$show-slide.order, module = $delete-slide-module-name)

-- ftd.image:
if: { show-slide.order == show-slide.total-slides }
src: $assets.files.slides.assets.right.svg
width.fixed.px: 30
height.fixed.px: 30
align-self: end
padding.px: 7
background.solid: $inherited.colors.background.step-1
border-radius.px: 8
opacity: 0.3

-- ftd.image:
if: { show-slide.order != show-slide.total-slides }
src: $assets.files.slides.assets.right.svg
width.fixed.px: 30
height.fixed.px: 30
align-self: end
padding.px: 7
background.solid: $inherited.colors.background.step-1
border-radius.px: 8
$on-click$: $show-slide.move-slide.submit(team=$show-slide.team-slug, presentation=$show-slide.presentation-slug, order=$show-slide.order, direction=right, module = $delete-slide-module-name)


-- end: ftd.row

-- end: ftd.column


-- end: show-slide





