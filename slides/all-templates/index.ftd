height.fixed.px: 570
border-radius.px: 12
fit: cover

-- end: ftd.column

-- ftd.column:
width.fixed.px: 322
spacing.fixed.px: 16

-- ds.heading-medium: $featured-template.title

-- ftd.row:
spacing.fixed.px: 8
align-content: center
padding-vertical.px: 8

-- ftd.image:
src: $featured-template.owner_avatar
width.fixed.px: 32

-- ftd.text: $featured-template.owner_name
role: $inherited.types.button-small
color: $inherited.colors.text-strong

-- end: ftd.row

-- ftd.text: $featured-template.cta-text
background.solid: $inherited.colors.accent.primary
width: fill-container
text-align: center
padding-vertical.px: 16
padding-horizontal.px: 18
border-radius.px: 8
color: $inherited.colors.text-strong
$on-click$: $ftd.set-bool($a = $featured-template.pop-up, v= true)

-- end: ftd.column

-- ftd.column:
if: { featured-template.pop-up}
width.fixed.px: 370
min-height.fixed.px: 442
