boolean $pop-up: false

-- ftd.row:
width: fill-container
padding-vertical.px: 24
padding-horizontal.px: 40
spacing.fixed.px: 24

-- ftd.column:
width.fixed.px: 1014
spacing.fixed.px: 36

-- ftd.image:
src: $featured-template.thumbnail
