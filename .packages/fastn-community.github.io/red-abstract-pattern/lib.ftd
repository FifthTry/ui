-- component coming-soon:
caption title:
body body:
string cta-text:
string cta-link:

-- ds.section-column:
margin: $ds.spaces.vertical-gap.zero
inset: $ds.spaces.inset-square.large

-- ds.column:
background.solid: $ds.colors.background.base
width.fixed.px if { ftd.device != "mobile" }: 860
spacing: $ds.spaces.vertical-gap.large
;;inset if { ftd.device == "mobile" }: $ds.spaces.inset-wide.medium-zero
inset: $ds.spaces.inset-square.large
radius: $ds.radius.large

-- ds.heading-hero: $coming-soon.title
align: center

-- ds.copy-regular: $coming-soon.body
align: center
width.fixed.px if { ftd.device != "mobile" }: 570

-- ds.row:
if: { ftd.device != "mobile" }
spacing: $ds.spaces.horizontal-gap.small

-- ftd.text-input:
placeholder: Enter your email
width.fixed.px: 390
height.fixed.px: 54
border-width.px: 1
border-color: $inherited.colors.border
border-radius.px: 48
background.solid: $inherited.colors.background.base
shadow: $shadow
padding.px: 12

-- ds.floater:
width: hug-content
right: 212

-- ds.secondary-button: $coming-soon.cta-text
link: $coming-soon.cta-link
;;size: large
rounded: true

-- end: ds.floater

-- end: ds.row

-- ds.column:
if: { ftd.device == "mobile" }
spacing: $ds.spaces.horizontal-gap.small

-- ftd.text-input:
placeholder: Enter your email
width: fill-container
height.fixed.px: 54
border-width.px: 1
border-color: $inherited.colors.border
border-radius.px: 48
background.solid: $inherited.colors.background.base
shadow: $shadow
padding.px: 12

-- ds.secondary-button: $coming-soon.cta-text
link: $coming-soon.cta-link
size: large
width: full
rounded: true

-- end: ds.column

-- end: ds.column

-- end: ds.section-column

-- end: coming-soon










-- component social-icon:
social list social-list:

-- ds.floater:
bottom: 0

-- ds.row:
spacing: $ds.spaces.horizontal-gap.large
background.solid: #FF5144
radius: $ds.radius.zero
inset: $ds.spaces.inset-square.large

-- icon-data:
for: $obj in $social-icon.social-list
